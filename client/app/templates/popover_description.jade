.md-content
    .md-header.clearfix
        .line
            h3.left #{model.name}
            .right
                a(href="#{model.git}").repo-stars &nbsp;
                a(href="#{model.git}")
                    svg(viewBox="0 0 32 32", xmlns="http://www.w3.org/2000/svg", class="icon")
                        use(xlink:href="img/sprites.svg#icon-star")
        if (model.comment !== 'official application')
            .line.noncozy-warning
                i.fa.fa-info-circle
                span
                    != t('warning unofficial app')
    .md-body
    .md-footer.clearfix
        button.btn.right#confirmbtn= t('install')
        button.btn.light-btn.right#cancelbtn= t('cancel')
