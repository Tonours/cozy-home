.clearfix
    span.left
        strong #{app.displayName}
        if app.version
            span &nbsp;-&nbsp; #{app.version}
        span &nbsp;-&nbsp;
        if app.state === 'installed'
            span.state-label= t('running')
        else
            span.state-label
                | #{app.state}
        if app.needsUpdate
            span &nbsp;
            svg(viewBox="0 0 120 120", xmlns="http://www.w3.org/2000/svg", class="update-notification-icon")
                use(xlink:href="img/sprites.svg#icon-notification")

            

    .buttons.right
        span.smaller
            input(class="app-stoppable",
                  type="checkbox",
                  title="always on",
                  checked="checked",
                  name="app-stoppable-#{app.id}")
            label(for="app-stoppable-#{app.id}") auto stop
        button.btn.btn-large.start-stop-btn
            i.fa.fa-power-off
            | 
            span.label= t('stop this app')
        button.btn.update-app
            i.fa.fa-refresh
            | 
            span.label= t('update')
        button.btn.remove-app
            i.fa.fa-trash
            | 
            span.label= t('remove')

    .comments
        if app.comment === 'official application'
            svg(viewBox="0 0 120 120", xmlns="http://www.w3.org/2000/svg", width="20")
                use(xlink:href="img/sprites.svg#icon-happycloud")
        a(href="#{app.website}")= app.website
